<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.elvir.morecommunication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_main_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_main_launcher_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.anonymously.SignInAnonymouslyScreenActivity"></activity>
        <activity android:name=".ui.sign_in_mode.SignInModeScreenActivity" />
        <activity android:name=".ui.splas_screen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.sign_in.SignInActivity" />
        <activity android:name=".ui.main_menu_screen.MainMenuActivity" />
    </application>

</manifest>